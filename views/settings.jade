extends layout

block content
  div.settings-grid
    div.widget#settings-left
      ul#settings-list
        li: a(href="./account") アカウント
        li: a(href="./account") パスワード
        li: a(href="./account") プロフィール
        li: a(href="./") メールアドレスと通知
    div.widget#settings-right
      h1#settings-header.widget-hd: span アカウント設定
      form(action='/', method='post').form
        div
          label ユーザーID
          div.input-group
            span.input-group-addon @
            input(type='text', name='', placeholder='Your user ID')
          if authErrName
            span.flash= authErrName
        div
          label パスワード
          input(type='text', name='', placeholder='Your password' required)
          if authErrPassword
            span.flash= authErrPassword
        div
          input(type='submit', value='ログイン')
          input(type='hidden', name='_csrf' value=csrftoken)
