extends layout

block settings-content
  h1.widget-hd: span= string.view.settings.notifications.email
  form(action='/settings/email', method='post').form
    if successSaveChanges
      p.success= successSaveChanges
    .input-group
      label= string.input.user.emailLabel
      input(type='email', name='email', maxlength=config.pattern.user.email.maxlength, value=user.email, title=string.input.user.emailTitle, placeholder=string.input.user.emailTitle, required).input-text
      if validationErrEmail
        span.flash= validationErrEmail
    .input-group
      label= string.input.user.publicEmailLabel
      p= string.input.user.publicEmailMessage
      .input-checkbox
        input(type='checkbox' name='public_email' checked=user.publicEmail)
        label= string.input.user.publicEmailString
    .input-group
      input(type='submit', value=string.word.saveChanges).input-submit
      input(type='hidden', name='_csrf' value=csrftoken)
  //- 通知設定は未実装 別ページにするかも
  h1.widget-hd: span= string.view.settings.notifications.notifications
  form(action='/settings/notifications', method='post').form
    .input-group
      label NAMEからのお知らせ
      p NAME からお知らせメールが届きます。
      .input-checkbox
        input(type='checkbox')
        label メール
        input(type='checkbox')
        label Web
    .input-group
      input(type='submit', value=string.word.saveChanges).input-submit
      input(type='hidden', name='_csrf' value=csrftoken)
