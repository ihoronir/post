extends layout

block settings-content
  h1.c-hd--h1: span.c-hd__underline= string.view.settings.account.title
  form(action='/settings/account' method='post').p-form
    if successSaveChanges
      p.success= successSaveChanges
    .p-form__input-group
      label.p-form__label= string.input.user.screenNameLabel
      .c-input--text-with-addon
        span.c-input--text-with-addon__addon @
        input(type='text' name='screen_name' maxlength=config.pattern.user.screenName.maxlength pattern=config.pattern.user.screenName.string title=string.input.user.screenNameTitle value=user.screenName placeholder=string.input.user.screenNameTitle required).c-input--text-with-addon__input
      if validationErrScreenName
        span.p-form__warn= validationErrScreenName
    .p-form__input-group
      input(type='submit' value=string.word.saveChanges).c-input--submit
      input(type='hidden' name='_csrf' value=csrftoken)
