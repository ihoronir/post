extends layout

block settings-content
  h1.widget-hd: span= string.view.settings.password.title
  form(action='/settings', method='post').form
    div.input-group
      label= string.input.user.currentPasswordLabel
      input(type='password', name='current_password', placeholder='Your current password' required).input-text
    div.input-group
      label= string.input.user.newPasswordLabel
      input(type='password', name='new_password', pattern=config.pattern.user.password.string, title=string.input.user.passwordTitle, placeholder=string.input.user.passwordTitle, required).input-text
    div.input-group
      label= string.input.user.newPasswordConfirmLabel
      input(type='password', name='new_password_confirm', title=string.input.user.newPasswordConfirmTitle, placeholder=string.input.user.newPasswordConfirmTitle, required).input-text
    div.input-group
      input(type='submit', value=string.word.saveChanges).input-submit
      input(type='hidden', name='_csrf' value=csrftoken)
